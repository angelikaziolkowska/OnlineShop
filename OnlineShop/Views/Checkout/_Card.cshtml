@using OnlineShop.Dal.Models

@{
    ViewBag.CardDetailsTitle = "Card Details";
    ViewBag.DeliveryDetailsTitle = "Delivery Details";
    ViewBag.BillingDetailsTitle = "Billing Details";
}

<form method="post">
    <div class="Card form-group">
        <div class="form-group row">
            <div class="Card col-md-10">
                <h4 align="center">@ViewBag.DeliveryDetailsTitle</h4>
                <input type="text" class="form-control" id="name" name="name" placeholder="Your name">
            </div>
        </div>
        <div class="form-group row">
            <div class="Card col-md-10">
                <input type="text" class="form-control" id="address" name="address" placeholder="Address">
            </div>
        </div>
        <div class="form-group row">

            <div class="Card col-md-10">
                <input type="text" class="form-control" id="postcode" name="postcode" placeholder="Postcode">
            </div>
        </div>
        <div class="form-group row">
            <div class="Card col-md-10">
                <input type="email" class="form-control" id="emailAddress" name="emailAddress" placeholder="Email">
            </div>
        </div>

        <div class="form-group row">
            <div class="Card Opt col-md-10">
                <p align="left"> Are your billing details the same?</p>
            </div>
            <div class="col-md-10">
                <select id="billingDetails" name="billingDetails" class="Card form-control Opt">
                    <option value="yes" align="center">
                        Yes
                    </option>
                    <option value="no" align="center">
                        No
                    </option>

                </select>
                @Html.Partial("_BillingDetails")
            </div>
        </div>

        <div class="form-group row">
            <div class="Card col-md-10">
                <h4 align="center">@ViewBag.CardDetailsTitle</h4>
                <input type="number" class="form-control" id="cardNumber" name="cardNumber" placeholder="Card number">
            </div>
        </div>

        <div class="form-group row Card col-md-11" id="cardType" name="cardType">
            @*@Html.DropDownList("cardType",
            EnumHelper.GetSelectList(typeof(CardType)),
            "Select your card type",
            new { @class = "form-control Card btn-default btn-sm" })*@
            @Html.Hidden("cardType");
            @Html.DropDownList("cardType",
                    new SelectList(Enum.GetValues(typeof(CardType))),
                    "Select your card type")
        </div>
        <div class="form-group row Card col-md-10">
            @Html.DropDownList("expiryMonth", Enumerable.Range(1, 12).Select(x => new SelectListItem { Text = x.ToString() }), "Expiry Month")
        </div>
        <div class="form-group row Card col-md-10">
            @Html.DropDownList("expiryYear", Enumerable.Range(DateTime.Now.Year, 10).Select(x => new SelectListItem { Text = x.ToString() }), "Expiry Year")
        </div>




        <div class="form-group row">
            <div class="Card col-md-10">
                <input type="number" class="form-control" id="cVV2Code" name="cVV2Code" placeholder="CVV2 Code">
            </div>
        </div>
        @*@Html.Hidden("name")
        @Html.Hidden("address")
        @Html.Hidden("postcode")
        @Html.Hidden("emailAddress")
        @Html.Hidden("billingDetails")
        @Html.Hidden("name")
        @Html.Hidden("cardNumber")
        @Html.Hidden("cardType")
        @Html.Hidden("expirationMonthAndYear")
        @Html.Hidden("cVV2Code")*@
        <button type="submit" class="btn btn-default btn-lg">Submit</button>
    </div>
</form>