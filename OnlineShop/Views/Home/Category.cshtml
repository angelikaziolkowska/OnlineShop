
@{
    ViewBag.Title = "The Store";
}

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
</div>
<div class="container">
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12" >
                    <div class="btn btn-default btn-lg" role="button">
                        <a href="@Url.Action("Shop", "Product", new { categoryId = category.Id })" title="List View" class="links">
                            <img src="~/Content/Images/@(category.ImageName.ToString()).jpg" alt="category" height="200" width="300"><br />
                            @category.Name
                        </a>                                                                  
                    </div>
                </div>
            }
        </div>
</div>